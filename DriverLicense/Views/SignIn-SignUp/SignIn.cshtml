@{
    ViewData["Title"] = "Вход в аккаунт";
}

<link rel="stylesheet" href="~/css/SignIn/signin.css">

<div class="page-background">
    <div class="container-page">
        <div class="reg-container">
            <div class="title">
                <div class="main-title">Войдите в аккаунт</div>
                <div class="second-title">Еще нет аккаунта? Вы можете&#160;
                    <a class="signup-a" asp-controller="SignUp" asp-action="SignUp">Создать</a>
                    &#160;его</div>
            </div>
            <div class="fields-container">
                <div class="name-fields">
                    <input class="name-tbox" type="text" placeholder="Имя">
                    <input class="name-tbox2" type="text" placeholder="Фамилия">
                </div>
                <div class="password-fields">
                    <input class="password-tbox" type="password" placeholder="Пароль">

                </div>
            </div>
            <div class="button-container">
                <input class="signup-btn" type="button" value="Войти">
            </div>
        </div>
    </div>
</div>